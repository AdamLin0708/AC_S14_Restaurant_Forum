<div class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to '首頁', root_path %>
      </li>
      <li role="presentation">
        <%= link_to '最新動態', feeds_restaurants_path %> 
      </li>
      <li role="presentation" class="active">
        <%= link_to 'TOP10人氣餐廳', ranking_restaurants_path %> 
      </li>
      <li role="presentation">
        <%= link_to '美食達人', users_path %> 
      </li>
    </ul>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="page-header">
        <h1>TOP10人氣餐廳<small> (收藏數最高)</small></h1>  
      </div>      

      <% @restaurants.each do |restaurant| %>

        <div class="ranking-item">
          <div class="col-md-3">  
            <% if restaurant.image? %>
              <%= image_tag restaurant.image, class: "img-rounded img-responsive",
                  height: "100%" %>
            <% else %>
              <%= image_tag "http://via.placeholder.com/200x160", class: "img-responsive img-rounded",
                  height: "100%" %>
            <% end %>           
          </div>


          <div class="col-md-9">            
            <h4>
              <%= link_to restaurant.name , restaurant_path(restaurant)  %>              
              <span class="label label-default">收藏數:<%= restaurant.favorites_count %></span>
              <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>     
            </h4>              
            <p><%= truncate(restaurant.description, length: 200) %></p>                            
          </div>
          <div class="clearfix"></div>
        </div>
      
      <% end %>
    </div>    
  </div> 
</div> 