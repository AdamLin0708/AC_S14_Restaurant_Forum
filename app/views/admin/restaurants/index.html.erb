<div class="container">
  <div class="page-header">
    <h1>Licky Lips管理後台 - 餐廳列表</h1>
  </div>


  <div class="container">
    <div class="row">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active">
          <%= link_to '餐廳列表', admin_restaurants_path %>
        </li>        
        <li role="presentation">
          <%= link_to '餐廳分類列表', admin_categories_path %>
        </li>  
      </ul>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-12">
      <div>
        <%= link_to '新增餐廳', new_admin_restaurant_path , :class => 'btn btn-primary' %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
           <th>#</th>
           <th>分類</th>
           <th>名稱</th>
           <th width="10%">#</th>
           <th width="10%">#</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
            <tr>
             <th scope="row"><%= restaurant.id %></th>
             <td>[<%= restaurant.category.name %>]</td>
             <td>
              <%= link_to restaurant.name ,admin_restaurant_path(restaurant) %>
             </td>
             <td>              
              <%= link_to '<i class="fas fa-edit"></i> 編輯 '.html_safe, edit_admin_restaurant_path(restaurant) %>             
             </td>
             <td>
              <%= link_to '<i class="fas fa-trash"></i> 刪除 '.html_safe, admin_restaurant_path(restaurant), method: :delete, data: { confirm: "確定要刪除?"} %>
             </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="text-center"> 
        <%= paginate @restaurants %>
      </div>
    </div>
  </div>



</div>
