<div class="container">
  <div class="page-header">
    <h1>Licky Lips管理後台 - 餐廳分類列表</h1>
  </div>

  <div class="container">
    <div class="row">
      <ul class="nav nav-tabs">
        <li role="presentation">
          <%= link_to '餐廳列表', admin_restaurants_path %>
        </li>        
        <li role="presentation" class="active">
          <%= link_to '餐廳分類列表', admin_categories_path %>
        </li>  
      </ul>
    </div>
  </div>
  <br>

  <div class="container">
    <div class="row">
      <div class="form-inline col-md-12" >
        <%= form_for [:admin, @category] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "分類名稱",  class: "form-control" %>
          </div>
          <%= f.submit "新增分類", class: "btn btn-primary" %>
          <% if @category.errors.any? %>
            <%= @category.errors.full_messages.to_sentence %>
          <% end %>
        <% end %>      
      </div>
      <br><br><br>
      
      <div class="col-md-12">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>#</th>
              <th>分類名稱</th>
              <th width="10%">#</th>
              <th width="10%">#</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <th scope="row"><%= category.id %></th>
                <td><%= category.name %></td>
                <td>
                  <%= link_to '<i class="fas fa-edit"></i> 編輯 '.html_safe, admin_categories_path(id: category.id) %>        
                </td>
                <td>
                  <%= link_to '<i class="fas fa-trash"></i> 刪除 '.html_safe, admin_category_path(category), method: :delete, data: { confirm: "確定要刪除?"} %>                  
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>