<div class="container">
  <div class="row">
    
    <!-- restaurants list，有多寫restaurant-item的class style -->
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <% if restaurant.image? %>
            <%= image_tag restaurant.image, class: "img-rounded img-responsive",
            height: "100%" %>
          <% else %>
            <%= image_tag "http://via.placeholder.com/100x70", class: "img-responsive img-rounded",
            height: "100%" %>
          <% end %>
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p class="label label-default"><%= restaurant.category.name %><p>
            <p><%= truncate(restaurant.description, length: 60) %></p>
            <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
            <%= render partial: "shared/like", locals: {restaurant: restaurant} %>
          </div>
        </div>
      </div>
    <% end %>
      
    <!-- 有generate kaminari paginate bootstrap style -->    
      
  </div>
  
  <div class="text-center">
      <%= paginate @restaurants %>
  </div>
</div>

