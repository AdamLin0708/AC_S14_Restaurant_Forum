<% if restaurant.is_favorited?(current_user) %>
  
    <%= link_to unfavorite_restaurant_path(restaurant), method: :post do %>
     <i class="fas fa-star" style="color: yellow" aria-hidden="true"></i>
    <% end %>
  
  
<% else %>
  <%= link_to favorite_restaurant_path(restaurant), method: :post do %>
      <i class="far fa-star" aria-hidden="true"></i>
    <% end %>
<% end %>