<% if user != current_user %>
  <% if current_user.following?(user)%>
    <%= link_to '追蹤中 <i class="fas fa-thumbs-up"></i>'.html_safe, followship_path(user), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to '追蹤 <i class="fas fa-plus"></i>'.html_safe, followships_path(following_id: user), method: :post, class: "btn btn-danger" %>
  <% end %>
<% end %>